import random
print("Вибери, що ти хочеш вгадати: щось смачне або щось велике")
choice = input("Твій вибір: ").strip().lower()
print("Цікаво. Твій вибір враховано... можливо ")
відповіді = ["яблуко", "земля", "ніч", "молоко"]
секрет = random.choice(відповіді)
підказки = [
    "Це може бути або рідке, або ні",
    "Це іноді здається очевидним",
    "Це має колір. Але не завжди",
]
спроби = 0
while True:
    guess = input("Я думаю, це: ").strip().lower()
    реакція = random.choice([
        "Так",
        "Можливо",
        random.choice(підказки)
    ])
    print(реакція)
    спроби += 1
    if спроби == random.randint(4, 8):
        print("\nГра завершена")
    break
